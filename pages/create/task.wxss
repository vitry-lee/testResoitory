/* pages/create/task.wxss */
.assignmemt-view{
    padding: 10px;
    font-size: 14px;
}
.text-area{
    padding: 6px;
    background-color: #F5F5F5;
    border-radius: 10px;
}
.status-list{
    display: flex;
    flex-wrap: wrap;
    margin-top: 20px;
    justify-content: space-between;
}
.list-item{
    margin-bottom: 10px;
    padding: 10px;
    text-align: center;
    width: 46%;
    box-sizing: border-box;
    border-radius: 30px;
    border: 1px solid #000;
}
.list-item-0{
    background-color: #FFEAE7;
    color: #FE8F80;
    border-color: #FE8F80;
}
.list-item-1{
    background-color: #FFF3DF;
    color: #FDC158;
    border-color: #FDC158;
}
.list-item-2{
    background-color: #E3F0FE;
    color: #8CC0F8;
    border-color: #8CC0F8;
}
.list-item-3{
    background-color: #E2F7DD;
    color: #60D24A;
    border-color: #60D24A;
}
.list-item-0.activeStatus{
    background-color: #FE8F80;
    color: #FFEAE7;
    border-color: #FFEAE7;
}
.list-item-1.activeStatus{
    background-color: #FDC158;
    color: #FFF3DF;
    border-color: #FFF3DF;
}
.list-item-2.activeStatus{
    background-color: #8CC0F8;
    color: #E3F0FE;
    border-color: #E3F0FE;
}
.list-item-3.activeStatus{
    background-color: #60D24A;
    color: #E2F7DD;
    border-color: #E2F7DD;
}
.time-part,
.create-btn{
    margin-top: 20px;
    line-height: 40px;
    border-radius: 30px;
}
.time-part{
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    padding: 0 20px;
    background-color: #F5F5F5;
}
.create-btn{
    text-align: center;
    color: #fff;
    background-color: #0072ff;
}
.picker{
    position: absolute;
    left: 0;
    top: 0;
    padding-right: 20px;
    width: 100%;
    height: 40px;
    text-align: right;
    box-sizing: border-box;
}